	<text>
		<body>
			<div type="letter">
				<head>
					<title>Sample Letter Title</title>
				</head>
				<opener>
					<dateline>
						<date>Some place and date described by the author.</date>
					</dateline>
					<salute>Some salutation, e.g. "Dearest Miguel"</salute>
				</opener>
				<p>Sample letter content</p>
				<closer>
					<salute>Some closing salutation, e.g. "With love..."</salute>
					<signed>Sender name and/or signature.</signed>
				</closer>
			</div>
		</body>
	</text>
